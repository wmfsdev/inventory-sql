extends layout

block content

  h1 Genre: #{genre_name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    if genre_books.length
      dl
        each book in genre_books
          dt
            a(href=`/books/${book.book_id}`) #{book.title}
          dd #{book.summary}
    else
      p This genre has no books.

    hr
    p
    a(href=genre_books+'/delete') Delete genre
